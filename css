/* Diseño Responsivo */
@media (max-width: 768px) {
    /* Encabezado Responsivo */
    nav {
        flex-wrap: nowrap; /* Evita que los elementos de nav se envuelvan */
        justify-content: space-between; /* Alinea logo a izq, toggle a der */
    }

    .nav-main-wrapper {
        display: none; /* Oculta el menú principal y botones por defecto en móvil */
        flex-direction: column; /* Apila los elementos verticalmente */
        position: absolute;
        top: 100%; /* Debajo del header */
        left: 0;
        width: 100%;
        background: linear-gradient(135deg, #451827, #437b98);
        box-shadow: 0 5px 10px rgba(0,0,0,0.2);
        padding: 1rem 2rem;
        transition: transform 0.3s ease-out, opacity 0.3s ease-out;
        transform: translateY(-10px); /* Ligeramente hacia arriba */
        opacity: 0;
        pointer-events: none; /* No interactuable cuando está oculto */
    }

    .nav-main-wrapper.is-open {
        display: flex; /* Muestra el menú cuando está abierto */
        transform: translateY(0); /* Vuelve a su posición normal */
        opacity: 1;
        pointer-events: all; /* Interactuable cuando está abierto */
    }

    .nav-links {
        flex-direction: column; /* Apila los enlaces */
        width: 100%;
        text-align: center;
        gap: 1rem; /* Espacio entre los enlaces */
        margin-bottom: 1rem; /* Espacio antes de los botones */
    }

    .nav-links li {
        width: 100%;
    }
    
    .nav-links a {
        padding: 0.8rem 0;
        display: block; /* Para que el área clicable sea más grande */
        border-bottom: 1px solid rgba(255,255,255,0.1); /* Separador visual */
    }

    .nav-links li:last-child a {
        border-bottom: none; /* Sin borde en el último elemento */
    }

    .auth-buttons {
        flex-direction: column; /* Apila los botones de autenticación */
        width: 100%;
        gap: 1rem;
    }

    .login-btn {
        width: 100%; /* Botones de ancho completo */
        text-align: center;
    }

    .menu-toggle {
        display: block; /* Muestra el botón de hamburguesa en móvil */
    }

    /* Resto de reglas responsivas */
    .hero-container {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .hero-content h1 {
        font-size: 2.5rem;
    }

    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .blog-grid {
        grid-template-columns: 1fr;
    }
}
