    display: block;
    width: 25px;
    height: 3px;
    background-color: white;
    margin: 5px 0;
    transition: all 0.3s ease-in-out;
}

/* Animación del icono de hamburguesa a "X" */
.menu-toggle.is-active .hamburger-icon:nth-child(2) {
    opacity: 0; /* Desaparece la barra del medio */
}

.menu-toggle.is-active .hamburger-icon:nth-child(1) {
    transform: translateY(8px) rotate(45deg); /* Gira y mueve la primera barra */
}

.menu-toggle.is-active .hamburger-icon:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg); /* Gira y mueve la tercera barra */
}


